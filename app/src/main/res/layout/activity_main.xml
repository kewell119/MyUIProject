<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="UI示例" />

    <Button
        android:id="@+id/button_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动Spinner示例" />

    <Button
        android:id="@+id/button_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动SeekBar示例" />

    <Button
        android:id="@+id/button_gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动GridView示例" />

    <Button
        android:id="@+id/button_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动ListView示例一" />

    <Button
        android:id="@+id/button_listview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动ListView示例二" />
</LinearLayout>
